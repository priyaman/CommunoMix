<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.priyaman.communomixclient">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".Activities.LoginActivityFirebase"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.HostHomeActivity"
            android:label="@string/title_activity_host_home"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.priyaman.communomixclient.LoginActivity" />
        </activity>
        <activity
            android:name=".Activities.CreateUserActivity"
            android:label="@string/title_activity_create_user"
            android:parentActivityName=".Activities.LoginActivityFirebase"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.priyaman.communomixclient.Activities.LoginActivityFirebase" />
        </activity>
        <activity
            android:name=".Activities.UserHomeActivity"
            android:label="@string/title_activity_user_home"
            android:parentActivityName=".Activities.LoginActivityFirebase"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.priyaman.communomixclient.Activities.LoginActivityFirebase" />
        </activity>
        <activity
            android:name=".Activities.HostPartyDashboardActivity"
            android:label="@string/title_activity_host_party_dashboard"
            android:parentActivityName=".Activities.UserHomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.priyaman.communomixclient.Activities.UserHomeActivity" />
        </activity>
    </application>

</manifest>
